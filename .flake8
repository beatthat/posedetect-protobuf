[flake8]
ignore = E203, E266, E501, W503
max-line-length = 80
max-complexity = 18
select = B,C,E,F,W,T4,B9
exclude =
    *_pb2.py,
    *_pb2_grpc.py,
    __pycache__,
    .cache,
    .circleci,
    .git,
    .github,
    .pytest_cache,
    .tox,
    .venv,
    .vscode,
    build,
    behave-restful,
    classifier/src/scripts

